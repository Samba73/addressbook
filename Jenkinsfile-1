pipeline {
    agent {
        docker { image 'tomcat:8.5.83-jre8' }
    }
    stages {  
        stage('owner change') {
            steps {
                sh 'usermod -aG /usr/share/tomcat/* jenkins'
            }
        }
        stage('copy config files of tomcat') {
            steps {
                sh 'cp -R /usr/local/tomcat/webapps.dist/* /usr/local/tomcat/webapps'
            }
        }
    }
}
